<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Salong Hanna</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark salon-nav">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Salong Hanna</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item"><a class="nav-link" href="#home">Hem</a></li>
                        <li class="nav-item"><a class="nav-link" href="#services">Tjänster</a></li>
                        <li class="nav-item"><a class="nav-link" href="#hours">Öppettider</a></li>
                        <li class="nav-item"><a class="nav-link" href="#contact">Kontakt</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="layout-wrapper">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="salon-footer" id="contact">
        <div class="container">
            <div class="row g-3 align-items-center">
                <div class="col-md-8">
                    <p class="footer-title">Salong Hanna</p>
                    <p class="footer-subtitle">Glömmingegränd 18A, Stockholm, Sweden 163 62</p>
                </div>
                <div class="col-md-4 footer-actions">
                    <a class="footer-link" href="tel:+468362420">Ring: +46 8 36 24 20</a>
                    <a class="footer-link" href="https://maps.google.com/?q=Gl%C3%B6mmingegr%C3%A4nd+18A,+Stockholm,+Sweden+163+62" target="_blank" rel="noopener">Hitta hit</a>
                </div>
            </div>
            <div class="footer-meta">© @DateTime.Now.Year Salong Hanna. Premium grooming för män.</div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
